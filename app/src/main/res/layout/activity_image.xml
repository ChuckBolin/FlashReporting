<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:context=".ImageActivity">

    <FrameLayout
        android:id="@+id/container_top"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/Chocolate">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/container_left"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/container_top"
        android:background="@color/BlueViolet">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/container_right"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/container_left"
        android:layout_below="@id/container_top"
        android:layout_toEndOf="@id/container_left"
        android:background="@color/AntiqueWhite">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/container_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/MediumBlue"
        android:layout_alignRight="@+id/container_right"
        android:layout_alignEnd="@+id/container_right"
        android:layout_below="@+id/container_left"
        android:layout_alignParentBottom="true">


    </FrameLayout>
</RelativeLayout>
